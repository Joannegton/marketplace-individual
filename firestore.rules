rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleção de vendedores (sellers)
    match /sellers/{sellerId} {
      // Leitura: vendedor autenticado pode ler seu próprio perfil OU qualquer um pode ler vendedores ativos
      allow read: if (request.auth != null && request.auth.uid == resource.data.uid) 
        || (resource.data.active == true);
      
      // Criação: qualquer usuário autenticado pode criar seu perfil (código de acesso no front valida)
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.uid
        && request.resource.data.active == false;
      
      // Atualização: dono pode atualizar
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.uid;
      
      // Deleção: não permitida
      allow delete: if false;
    }
    
    // Coleção de produtos (products)
    match /products/{productId} {
      // Leitura: pública para todos (o frontend filtra por seller ativo)
      allow read: if true;
      
      // Criação: apenas vendedor autenticado com loja ativa (validado no frontend)
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.createdBy;
      
      // Atualização: apenas vendedor autenticado que criou
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
      
      // Deleção: apenas vendedor que criou
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
    }

    // Coleção de pedidos (orders)
    match /orders/{orderId} {
      // Criação pública: qualquer um pode criar
      allow create: if true;
      
      // Leitura: vendedor autenticado pode ler seus pedidos
      allow read: if request.auth != null && request.auth.uid == resource.data.sellerUid;
      
      // Não permite atualização nem deleção
      allow update, delete: if false;
    }

    // Negar qualquer outro acesso por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}