rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Coleção de vendedores (sellers)
    match /sellers/{sellerId} {
      // Leitura individual: qualquer um pode ler qualquer seller (frontend filtra por active)
      allow read: if true;
      
      // Criação: qualquer usuário autenticado pode criar seu perfil
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.uid
        && request.resource.data.active == false;
      
      // Atualização: dono pode atualizar
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.uid;
      
      // Deleção: não permitida
      allow delete: if false;
    }
    
    // Coleção de produtos (products)
    match /products/{productId} {
      // Leitura: pública para todos
      allow read: if true;
      
      // Criação: apenas vendedor autenticado
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.createdBy;
      
      // Atualização: apenas vendedor autenticado que criou
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
      
      // Deleção: apenas vendedor que criou
      allow delete: if request.auth != null 
        && request.auth.uid == resource.data.createdBy;
    }

    // Coleção de pedidos (orders)
    match /orders/{orderId} {
      // Criação pública: qualquer um pode criar
      allow create: if true;
      
      // Leitura: vendedor autenticado pode ler seus pedidos
      allow read: if request.auth != null && request.auth.uid == resource.data.sellerUid;
      
      // Não permite atualização nem deleção
      allow update, delete: if false;
    }

    // Negar qualquer outro acesso por padrão
    match /{document=**} {
      allow read, write: if false;
    }
  }
}