rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all files (public images)
    match /{allPaths=**} {
      // Public reads (images) are allowed.
      allow read: if true;
      // Writes allowed for any authenticated user (single admin account controls writes).
      allow write: if request.auth != null;
    }
  }
}
